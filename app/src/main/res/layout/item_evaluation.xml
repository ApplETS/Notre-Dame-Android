<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:layout_marginTop="8dp"
    app:cardCornerRadius="3dp"
    app:cardElevation="1dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minHeight="@dimen/material_component_lists_single_line_height"
        android:orientation="horizontal"
        android:paddingEnd="@dimen/material_component_lists_right_padding"
        android:paddingStart="@dimen/material_component_lists_icon_left_padding">

        <TextView
            android:id="@+id/textViewEvaluationName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="@dimen/material_component_lists_single_line_text_size" />

        <TextView
            android:id="@+id/textViewEvaluationGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="15sp"
            tools:text="15" />
    </LinearLayout>
</android.support.v7.widget.CardView>