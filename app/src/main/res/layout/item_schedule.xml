<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/material_component_lists_icon_left_padding"
    android:paddingEnd="@dimen/material_component_lists_right_padding">

    <TextView
        android:id="@+id/textViewScheduleTitreCours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/material_component_lists_single_line_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Nom Cours" />

    <TextView
        android:id="@+id/textViewScheduleSigle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        app:layout_constraintStart_toStartOf="@+id/textViewScheduleTitreCours"
        app:layout_constraintTop_toBottomOf="@+id/textViewScheduleTitreCours"
        tools:text="Sigle" />

    <TextView
        android:id="@+id/textViewScheduleGroupe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewScheduleSigle"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        tools:text="Groupe" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:textSize="@dimen/material_component_lists_two_line_secondary_text_size"
        android:text="-"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewScheduleSigle"
        app:layout_constraintStart_toEndOf="@+id/textViewScheduleSigle" />

    <TextView
        android:id="@+id/textViewScheduleLocal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/textViewScheduleSigle"
        app:layout_constraintTop_toBottomOf="@+id/textViewScheduleSigle"
        tools:text="Local" />

    <TextView
        android:id="@+id/textViewScheduleStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/material_component_lists_single_line_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewScheduleTitreCours"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="8:00" />

    <TextView
        android:id="@+id/textViewScheduleEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/material_component_lists_single_line_text_size"
        app:layout_constraintBaseline_toBaselineOf="@+id/textViewScheduleLocal"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="12:00" />

</android.support.constraint.ConstraintLayout>