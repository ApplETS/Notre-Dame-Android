<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:constraintlayout="http://schemas.android.com/apk/res-auto"
    xmlns:materialprogressview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeRefreshLayoutGradesDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.moos.library.CircleProgressView
            android:id="@+id/progressViewGrade"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            constraintlayout:layout_constraintEnd_toStartOf="@+id/view"
            constraintlayout:layout_constraintStart_toStartOf="parent"
            constraintlayout:layout_constraintTop_toTopOf="parent"
            materialprogressview:circleBroken="false"
            materialprogressview:end_color="@color/colorPrimary"
            materialprogressview:end_progress="100"
            materialprogressview:isFilled="false"
            materialprogressview:isTracked="true"
            materialprogressview:progressTextColor="@color/colorAccent"
            materialprogressview:progressTextSize="20sp"
            materialprogressview:start_color="@color/colorPrimary"
            materialprogressview:start_progress="0"
            materialprogressview:track_width="15dp" />

        <com.moos.library.CircleProgressView
            android:id="@+id/progressViewAverage"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            constraintlayout:layout_constraintBottom_toBottomOf="@+id/progressViewGrade"
            constraintlayout:layout_constraintEnd_toEndOf="@+id/progressViewGrade"
            constraintlayout:layout_constraintStart_toStartOf="@+id/progressViewGrade"
            constraintlayout:layout_constraintTop_toTopOf="@+id/progressViewGrade"
            materialprogressview:circleBroken="false"
            materialprogressview:end_color="@color/colorAccent"
            materialprogressview:end_progress="100"
            materialprogressview:isFilled="false"
            materialprogressview:isTracked="true"
            materialprogressview:progressTextColor="@color/colorAccent"
            materialprogressview:progressTextSize="20sp"
            materialprogressview:progressTextVisibility="false"
            materialprogressview:start_color="@color/colorAccent"
            materialprogressview:start_progress="0"
            materialprogressview:track_width="15dp" />

        <View
            android:id="@+id/view"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorPrimary"
            constraintlayout:layout_constraintBottom_toBottomOf="@+id/tvLabelGrade"
            constraintlayout:layout_constraintEnd_toStartOf="@+id/tvLabelGrade"
            constraintlayout:layout_constraintTop_toTopOf="@+id/tvLabelGrade" />

        <TextView
            android:id="@+id/tvLabelGrade"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:text="@string/label_current_rating"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            constraintlayout:layout_constraintBottom_toTopOf="@+id/tvLabelAverage"
            constraintlayout:layout_constraintEnd_toEndOf="parent"
            constraintlayout:layout_constraintTop_toTopOf="@+id/progressViewGrade" />

        <View
            android:id="@+id/view2"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp"
            android:background="@color/colorAccent"
            constraintlayout:layout_constraintBottom_toBottomOf="@+id/tvLabelAverage"
            constraintlayout:layout_constraintStart_toStartOf="@+id/view"
            constraintlayout:layout_constraintTop_toTopOf="@+id/tvLabelAverage" />

        <TextView
            android:id="@+id/tvLabelAverage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:text="@string/label_average"
            android:textColor="@color/colorAccent"
            android:textSize="20sp"
            constraintlayout:layout_constraintBottom_toBottomOf="@+id/progressViewGrade"
            constraintlayout:layout_constraintStart_toEndOf="@+id/view2"
            constraintlayout:layout_constraintTop_toBottomOf="@+id/tvLabelGrade" />
    </android.support.constraint.ConstraintLayout>
</android.support.v4.widget.SwipeRefreshLayout>