<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
    </style>

    <!-- Login screen theme. -->
    <style name="LoginTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
        <item name="colorControlHighlight">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorHint">@android:color/white</item>
        <item name="colorButtonNormal">@android:color/white</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LoginErrorTextAppearance" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:fontFamily">@font/delta_jaeger_light</item>
        <item name="fontFamily">@font/delta_jaeger_light</item>
    </style>
</resources>
